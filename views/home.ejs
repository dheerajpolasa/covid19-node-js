<link rel="stylesheet" href="/css/style.css">
<div id="covid-heading">
    <h1 id="heading"></h1>
</div>


<div id="sign-buttons-container">
    <a href="/doctors/register" class="btn btn1">Sign Up</a>
    <a href="/doctors/login" class="btn btn2">Sign In</a>
</div>
<script>
    let i = 0;
    let speed = 50;
    let texts = ['We can still win this pandemic', '#Stay Home, #Stay Safe', 'Leave this page, If you are not a doctor', 'This too shall pass', 'Nothing lasts forever']
    let j = 0;
    window.onload = typeWriter();
    async function typeWriter() {
        if (i < texts[j].length) {
            document.getElementById("heading").innerHTML += texts[j].charAt(i);
            i++;
            setTimeout(typeWriter, speed);
        } else {
            i = 0;
            j = (j + 1) % texts.length;
            document.getElementById("heading").style.display = 'hidden';
            await new Promise(r => setTimeout(r, 1000));
            document.getElementById("heading").style.display = 'block';
            document.getElementById("heading").innerHTML = '';
            setTimeout(typeWriter, speed);
        }
    }
</script>